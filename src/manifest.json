{
  "manifest_version": 2,
  "name": "Auto Crawl",
  "version": "2.0.0.1",

  "description": "Auto Crawl Sites.",

  "permissions": ["<all_urls>", "tabs", "webRequest", "webRequestBlocking", "storage"],

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "default_icon": "icon.svg"
  },

  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },

  "icons": {
    "48": "icon.svg",
    "96": "icon.svg"
  },

  "applications": {
    "gecko": {
      "id": "auto.crawl@rutilicus.com"
    }
  }
}
